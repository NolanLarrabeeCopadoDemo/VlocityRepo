<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <assignments>
        <name>add_14_days</name>
        <label>add 14 days</label>
        <locationX>586</locationX>
        <locationY>283</locationY>
        <assignmentItems>
            <assignToReference>deliveryDate</assignToReference>
            <operator>Add</operator>
            <value>
                <numberValue>14.0</numberValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>availabilityDivisor</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>3.0</numberValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Build_Product_Quantities_Table</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>add_product_line_to_table</name>
        <label>add product line to table</label>
        <locationX>734</locationX>
        <locationY>438</locationY>
        <assignmentItems>
            <assignToReference>productQtyTable</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>orderproduct_tt</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Build_Product_Quantities_Table</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>minus_2_days</name>
        <label>minus 2 days</label>
        <locationX>380</locationX>
        <locationY>284</locationY>
        <assignmentItems>
            <assignToReference>deliveryDate</assignToReference>
            <operator>Subtract</operator>
            <value>
                <numberValue>2.0</numberValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Build_Product_Quantities_Table</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Order_Status</name>
        <label>Order Status</label>
        <locationX>480</locationX>
        <locationY>65</locationY>
        <defaultConnector>
            <targetReference>Build_Product_Quantities_Table</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>on time</defaultConnectorLabel>
        <rules>
            <name>early</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Current_Order.ERP_Order_Status_Text__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Early</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>minus_2_days</targetReference>
            </connector>
            <label>early</label>
        </rules>
        <rules>
            <name>late</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Current_Order.ERP_Order_Status_Text__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Late</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>add_14_days</targetReference>
            </connector>
            <label>late</label>
        </rules>
    </decisions>
    <dynamicChoiceSets>
        <name>orderProductChoiceSet</name>
        <dataType>String</dataType>
        <displayField>Product_Name__c</displayField>
        <filterLogic>and</filterLogic>
        <filters>
            <field>OrderId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <object>OrderItem</object>
        <sortField>Product_Name__c</sortField>
        <sortOrder>Asc</sortOrder>
        <valueField>Product_Name__c</valueField>
    </dynamicChoiceSets>
    <formulas>
        <name>ProductQtyRemaining</name>
        <dataType>Number</dataType>
        <expression>{!orderProductLoopVar.Quantity} / {!availabilityDivisor}</expression>
        <scale>0</scale>
    </formulas>
    <interviewLabel>ERP Order ATP Check {!$Flow.CurrentDateTime}</interviewLabel>
    <label>ERP Order ATP Check</label>
    <loops>
